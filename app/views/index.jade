extends layout

block content
  .container
    .page-header
      h1
        i.icon-laptop
        | &nbsp;My socket.io application

    .hero-unit
      h1 Socket.io

      .ping-unit
        // form.form-inline(action='javascript:void(0)')
        .input-append
          input#name(type='text',placeholder='your name')
          button#ping.btn.btn-info ping
        .wait-msg.text-info &nbsp; ... Just a moment.

      .pong-unit
        .text-success
          i.icon-ok &nbsp;
          | Pong recieved
        .well.text-center
          #msg
        .muted.text-right
          small
            i.icon-time &nbsp;
            span#time

    .hero-unit
      h1= title
      p Welcome to #{title}

      hr

      h1 'Allo, 'Allo!
      p You now have
      ul
        li HTML5 Boilerplate
        li Twitter Bootstrap
        li RequireJS

      p installed.

      h3 Enjoy coding! - Yeoman

      hr

      h1
        i.icon-flag
        | &nbsp;The Font

      div Font Awesome installed&nbsp;

      div.text-success
        | &nbsp;Ver 3.2.1&nbsp;
        i.icon-thumbs-up

block style
  include /main.css.html

block head_script
  include /modernizr.js.html

block body_script
  include /main.js.html

